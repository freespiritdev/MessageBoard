  script(src="main.js")
  title Message Board
body
  .container
    .row
      .col-xs-12.text-center
        h1 #{title}
        h2 Post Something!
        form(action="/message", method="POST", role="form")
          div.form-group
            textarea#message.form-control(rows="6", name="text", placeholder="Type a message")
          p
             button.btn.btn-info.bt-xs.delete Post Message
      
    .row
      .col-xs-12.text-center
      if messages.length
        table.table
          thead
              tbody
                tr
                  th Post
                  th Time
          tbody#messagelist     
            each message in messages
              tr(data-id= message.id)
                td #{message.post}
                td #{message.time}
                td
                  button.btn.btn-info.bt-xs.success Edit






