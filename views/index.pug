<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
  link(href='styles.css', rel='stylesheet')
  script(src='https://code.jquery.com/jquery-3.1.0.js', integrity='sha256-slogkvB1K3VOkzAI8QITxV3VzpOnkeNVsKvtkYLMjfk=', crossorigin='anonymous')
  script(src="main.js")
  title Message Board
body
  .container
    .row
      .col-xs-12.text-center
        h1 #{title}
        h2 Post Something!
        form(action="/message", method="POST", role="form")
          div.form-group
            textarea#message.form-control(rows="6", name="text")
          p
             button.btn.btn-primary.add Post Message
      
    .row
      .col-xs-12.text-center
      if messages.length
        table.table
          thead
              tbody
                tr
                  th Post
                  th Time
          tbody#messagelist     
            each message in messages
              tr(data-id= message.id)
                td= message.posts
                td= message.posted_at
                td
                  button.btn.btn-primary.edit Edit





ul.hidden
  li#template
  li.posts
  li.posted_at
    button.btn.btn-danger.bt-xs.delete X